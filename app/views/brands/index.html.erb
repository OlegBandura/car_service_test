<table border=1px>
  <tr>
    <th>Id</th>
    <th>Brand</th>
    <th>Edit/Delete</th>
  </tr>
<%  @brands.each do |brand| %>
<tr>
  <th><%= brand.id %></th>
  <th><%= brand.brand %></th>
  <th><%= link_to "Edit", edit_brand_path(brand) %> |   <%= link_to "Delete", brand_path(brand), method: :delete, data: {confirm: 'Are you sure?' } %>

</tr>
<% end %>
</table>
