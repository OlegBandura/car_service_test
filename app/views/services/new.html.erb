  <div class="form">
    <%= form_for :service, url: services_path do |form|%>
      <p>Інформація про авто</p>
        <%= form.label "Марка"%>
        <%= form.collection_select :brand_id, Brand.order(:brand), :id, :brand %>
        <%= form.label "Модель"%>
        <%= form.grouped_collection_select :model_id, Brand.order(:brand), :cars, :brand, :id, :model %>
        <%= form.label "Рік випуску"%>
        <%= form.select(:car_year, @year)  %>
      <p>Що потрібно ремонтувати</p>
        <%= form.text_area :text %>
      </p>
        <%= form.submit "Вибрати автосервіс" %>
    <% end %>
  </div>
